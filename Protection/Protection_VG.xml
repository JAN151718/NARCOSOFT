                android:textColorLink="@android:color/holo_blue_light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/p_p_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/p_p_a2"
                android:layout_below="@+id/p_p_a2"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:padding="7dp"
                android:text="@string/p_p_q3"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/p_p_a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/p_p_q3"
                android:layout_below="@+id/p_p_q3"
                android:ems="10"
                android:inputType="number"
                android:textColorLink="@android:color/holo_blue_light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/p_p_q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/p_p_a3"
                android:layout_below="@+id/p_p_a3"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:padding="7dp"
                android:text="@string/p_p_q4"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/p_p_a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/p_p_q4"
                android:layout_below="@+id/p_p_q4"
                android:ems="10"
                android:inputType="text|number"
                android:textColorLink="@android:color/holo_blue_light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/p_p_q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/p_p_a4"
                android:layout_below="@+id/p_p_a4"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:padding="7dp"
                android:text="@string/p_p_q5"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/p_p_a5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/p_i_a4"
                android:layout_below="@+id/p_p_q5"
                android:ems="10"
                android:inputType="text"
                android:textColorLink="@android:color/holo_blue_light"
                android:textIsSelectable="true" />


            <TextView
                android:id="@+id/p_p_q6"
