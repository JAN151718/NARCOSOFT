                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/p_p_a5"
                android:layout_below="@+id/p_p_q6"
                android:ems="10"
                android:inputType="text|textPersonName"
                android:textColorLink="@android:color/holo_blue_light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/p_p_q7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/p_p_a6"
                android:layout_below="@+id/p_p_a6"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:padding="7dp"
                android:text="@string/p_p_q7"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/p_p_a7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/p_p_q7"
                android:layout_below="@+id/p_p_q7"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColorLink="@android:color/holo_blue_light"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/p_p_q8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/p_p_a7"
                android:layout_below="@+id/p_p_a7"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:padding="7dp"
                android:text="@string/a_q6"
                android:textColor="@android:color/background_light" />

            <EditText
                android:id="@+id/p_p_a8"
                android:layout_width="wrap_content"
